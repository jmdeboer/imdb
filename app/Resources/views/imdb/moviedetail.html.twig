{# app/Resources/views/userdetail.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1> {{ movie.title }}</h1>
    <p>Year: {{ movie.year }}</p>
    <p>IMDB: <a target="imdb" href="{{ movie.imdbLink }}">{{ movie.imdbLink }}</a></p>
    <p>Number of ratings: {{ movie.numberOfRatings }}</p>
{% if movie.numberOfRatings == 1 %}
    <p>Rating: {{ movie.averageRating }}</p>
{% endif %}
{% if movie.numberOfRatings > 1 %}
    <p>Average rating: {{ movie.averageRating }}</p>
    <p>Highest rating: {{ movie.highestRating }}</p>
    <p>lowest rating: {{ movie.lowestRating }}</p>
{% endif %}
    <table>
        {% for rating in movie.ratings %}
        <tr>
            <td><a href="{{ path('_userDetail', {'slug': rating.user.slug}) }}">{{ rating.user.username }}</a></td>
            <td>{{ rating.rating }}</td>
        </tr>
        {% endfor %}
{% endblock %}
